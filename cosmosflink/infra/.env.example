# Azure Cosmos DB Configuration
COSMOS_URI=https://your-account.documents.azure.com:443/
COSMOS_KEY=your-primary-key-here
COSMOS_DB=cosmosflink-demo

# Container Configuration
COSMOS_SOURCE_CONTAINER=events-source
COSMOS_TARGET_CONTAINER=events-processed
COSMOS_OUTPUT_CONTAINER=events-output
COSMOS_LEASE_CONTAINER=cosmos-leases

# Partition Key Paths
COSMOS_SOURCE_PKEY_PATH=/customerId
COSMOS_TARGET_PKEY_PATH=/region
COSMOS_OUTPUT_PKEY_PATH=/region

# Change Feed Processor Configuration
CFP_HOST_NAME=cosmosflink-demo-host
CFP_LEASE_PREFIX=cosmosflink-demo

# Cosmos DB Performance Tuning
COSMOS_MAX_CONCURRENCY=10
COSMOS_MAX_RETRY_ATTEMPTS=3
COSMOS_BACKOFF_MS=1000
COSMOS_REQUEST_TIMEOUT_MS=10000

# Producer Configuration
PRODUCER_RATE_MSG_PER_SEC=10
PRODUCER_BATCH_SIZE=100
PRODUCER_REGION=eastus

# Consumer Configuration
CONSUMER_HTTP_PORT=8080
CONSUMER_HTTP_HOST=0.0.0.0

# Flink Configuration
FLINK_CHECKPOINT_INTERVAL_MS=30000
FLINK_PARALLELISM=2
FLINK_TASKMANAGER_MEMORY=1024m
FLINK_JOBMANAGER_MEMORY=1024m

# HTTP/TCP Transport Configuration (Secondary Pipeline)
HTTP_ENDPOINT=http://consumer:8080/events
TCP_HOST=consumer
TCP_PORT=9092
SERIALIZATION_FORMAT=json
CONNECTION_POOL_SIZE=10
TIMEOUT_MS=5000